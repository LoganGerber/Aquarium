	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch",
			"type": "coreclr",
			"request": "launch",
			"preLaunchTask": "build",
			"program": "${env:GODOTMONOVER}",
			"cwd": "${workspaceFolder}",
			"console": "internalConsole",
			"stopAtEntry": false,
			"args": [
				"--path",
				"${workspaceRoot}"
			]
		},
		{
			"name": "Launch (Select Scene)",
			"type": "coreclr",
			"request": "launch",
			"preLaunchTask": "build",
			"program": "${env:GODOTMONOVER}",
			"cwd": "${workspaceFolder}",
			"console": "internalConsole",
			"stopAtEntry": false,
			"args": [
				"--path",
				"${workspaceRoot}",
				"${command:godot.csharp.getLaunchScene}"
			]
		},
		{
			"name": "Attach to Process",
			"type": "coreclr",
			"request": "attach"
		}
	]
}
